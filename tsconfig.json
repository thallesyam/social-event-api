{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [""],
  "include": ["src", "tests"]
}
